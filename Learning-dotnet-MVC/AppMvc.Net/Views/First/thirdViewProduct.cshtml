@using AppMvc.Models
@{
    var product = ViewBag.product as ProductModel;
}
<p>@ViewData["Title"]</p>
<div class="card bg-danger text-white">
    <h1 class="card-header">@product?.Name</h1>
    <div class="card-body">
        <p class="card-text">
            Price: @product?.Price.ToString("N2")
        </p>
    </div>
</div>
<hr>